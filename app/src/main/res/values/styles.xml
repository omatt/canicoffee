<resources>
    <!-- https://developer.android.com/training/material/theme.html -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/app_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/app_color_accent</item>

        <item name="android:textColorPrimary">@color/app_text_color_primary</item>
        <item name="android:windowBackground">@color/app_window_bg</item>

        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>

        <item name="actionBarPopupTheme">@style/AppTheme.Popup</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
    </style>

    <style name="AbStyle" parent="Widget.AppCompat.Toolbar">
        <item name="elevation">2dp</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <!--showHome-->
    </style>

    <style name="AppTheme.Popup" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_primary</item>
        <item name="actionBarStyle">@style/AbStyle</item>
    </style>

</resources>
