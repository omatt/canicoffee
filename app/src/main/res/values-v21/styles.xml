<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- https://developer.android.com/training/material/theme.html -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/app_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="android:actionModeBackground">@color/app_primary</item>

        <item name="android:navigationBarColor">@color/app_nav_bar_color</item>

        <item name="android:textColorPrimary">@color/app_text_color_primary</item>
        <item name="android:windowBackground">@color/app_window_bg</item>

        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:timePickerDialogTheme">@style/AppTheme.Dialog</item>

        <item name="android:popupMenuStyle">@style/AppTheme.Popup</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Material.Dialog">
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
    </style>

    <style name="AppTheme.Popup" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/app_primary</item>
    </style>
</resources>